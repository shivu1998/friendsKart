<% include partials/header.ejs %>
<div class="container-fluid" style="max-width:450px">
    
        <form action="/register" method="POST" enctype="multipart/form-data">
        <h1 style="text-align:center">Sign-Up</h1>
         <div style="margin: 20px auto">
             <div class="form-group">
                  <input type="Number" class="form-control" name="username" placeholder="Sr No"   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength)  ;"   maxlength = "6" required >
             </div>
             <label>Upload document which confirms your SR No</label>
             <div class="form-group">
               <input type="file" id="upload" name="userImage" accept="image/*"  required>
             </div>
       
           <div class="form-group">
                 <input type="password" class="form-control" name="password" placeholder="password" pattern=".{5,}"  >
           </div>
           <div class="form-group">
               <input type="text" class="form-control" name="Profilename" placeholder="username" required>
           </div>
           <div class="form-group">
                 <input type="text" class="form-control" name="USN" placeholder="USN No"   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength)  ;" maxLength="12">
           </div>
           <div class="form-group">
                 <input type="Number" class="form-control" name="number" placeholder="Contact number"   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength)  ;" maxLength="10" required>
           </div>
            <div class="form-group">
                 <input type="text" class="form-control" name="email" placeholder="Email-ID"   required>
           </div>
           
           <div class="form-group">
                <input type="submit" id="submit" class="btn btn-primary btn-lg btn-block" value="Submit">
           </div>
          <label>* USN.No not compulsory for first year students</label>
         <div>
             <input type="checkbox" name="check" style="margin-right:5px"><a href="/terms">Terms and conditions</a>
         </div>
        </div>
        </form>
    <script type="text/javascript" src='./js/compress.js'></script>
<script type="text/javascript" src='./js/index2.js'></script>
</div>
<script>
    document.getElementById("submit").addEventListener("click",function(){
        $(".navbar").hide();
       $.ajax({
           
           url:"https://blooming-everglades-75024.herokuapp.com/upload",
           type:"GET",
           datatype:"json",
           success:function(data)
           {
              $("#replace").html(data);
           }
           
       }) ;
    });
</script>



